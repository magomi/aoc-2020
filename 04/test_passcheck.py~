import unittest
from passcheck import PassData
from passcheck import CheckCompleteness
from passcheck import CheckSyntax


class TestPassData(unittest.TestCase):
    # def test_find_next_empty(self):
    #     pass_data = PassData()
    #     pass_data.lines = ['abcd', 'abcd', '', 'abcd', 'abcd', '', '', 'abcd', 'abcd']
    #     self.assertEquals(2, pass_data.find_next_empty(0))
    #     self.assertEquals(5, pass_data.find_next_empty(3))
    #     self.assertEquals(6, pass_data.find_next_empty(6))
    #     self.assertEquals(None, pass_data.find_next_empty(8))


    def test_init(self):
        pass_data = PassData('../04/pass_01.data', CheckCompleteness())
        self.assertEquals(4, len(pass_data.data_sets))
    
    def test_count_invalid_completeness(self):
        pass_data = PassData('../04/pass_01.data', CheckCompleteness())
        self.assertEquals(2, pass_data.count_valid())

    def test_count_invalid_syntax(self):
        pass_data = PassData('../04/pass_03.data', CheckSyntax())
        self.assertEquals(4, pass_data.count_valid())


if __name__ == '__main__':
    unittest.main()